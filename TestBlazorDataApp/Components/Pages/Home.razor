@inherits HomeBase
@rendermode InteractiveServer
@page "/"
@page "/{Param:int}"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app. Your number is @(YourNumber).

<form>
    <input @bind="FirstThing.Id" disabled />
    <input @bind="FirstThing.Text" placeholder="Text" />
    <button type="submit" @onclick="OnSave">Save</button>

    @if(SaveSuccess == true)
    {
        <span class="text-success">Good</span>
    }
    else if (SaveSuccess == false)
    {
        <span class="text-danger">Bad</span>
    }
</form>

<div class="mt-4">
    Environment: @TestService.GetEnv()
    <br />
    Route Parameter: @Param
</div>

<button type="button" @onclick="OnTestJs">Test JS (broken)</button>